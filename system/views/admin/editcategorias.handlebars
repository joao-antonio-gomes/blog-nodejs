{{#if erros}}
    <div class="alert alert-danger">
        {{#each erros}}
            • {{texto}} <br/>
        {{/each}}
    </div>
{{/if}}
<h2 class="card-title">Editar Categoria:</h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="post">
            <input type="hidden" name="id" value="{{id}}">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" value="{{nome}}" id="nome" name="nome" placeholder="Nome da categoria" class="form-control">
            <label for="slug" class="form-label mt-3">Slug</label>
            <input type="text" value="{{slug}}" id="slug" name="slug" placeholder="Slug da categoria" class="form-control">

            <button type="submit" class="btn btn-primary mt-3">Salvar Alteração</button>
        </form>
    </div>
</div>
