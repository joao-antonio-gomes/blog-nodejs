<h2>Lista de categorias: </h2>
<hr>
<ul class="list-group list-group-flush">
    {{#each categorias}}
        <li class="list-group-item d-flex justify-content-between align-items-center" id="{{id}}">
            <a class="link-footer" href="/{{slug}}">{{nome}}</a>
            <div class="d-flex">
                <a href="categorias/edit/{{_id}}">
                    <button class="btn btn-primary btn-sm me-3" type="button">Editar</button>
                </a>
                <form action="/admin/categorias/delete" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button class="btn btn-danger btn-sm" type="submit">Excluir</button>
                </form>
            </div>
        </li>
    {{else}}
        <h4 class="mt-3">Nenhuma categoria registrada!</h4>
    {{/each}}
</ul>
<a href="/admin/categorias/add">
    <button type="button" class="btn btn-success mt-3">Nova categoria</button>
</a>
