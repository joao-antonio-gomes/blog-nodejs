{{#if erros}}
    <div class="alert alert-danger">
        {{#each erros}}
            • {{texto}} <br/>
        {{/each}}
    </div>
{{/if}}

<h2 class="card-title">Nova Postagem:</h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="post" class="d-flex flex-column">
            <label for="titulo" class="form-label">Titulo</label>
            <input type="text" id="titulo" name="titulo" placeholder="Titulo da postagem" class="form-control">
            <label for="slug" class="form-label mt-3">Slug</label>
            <input type="text" id="slug" name="slug" placeholder="Slug da postagem" class="form-control">
            <label for="descricao" class="form-label mt-3">Descricao</label>
            <input type="text" id="descricao" name="descricao" placeholder="Descricao da postagem"
                   class="form-control">
            <label for="conteudo" class="form-label mt-3">Conteudo</label>
            <textarea name="conteudo" id="conteudo" cols="30" rows="5" class="form-control"
                      placeholder="Conteúdo da postagem"></textarea>
            <label for="categoria" class="form-label mt-3">Categoria</label>
            <select name="categoria" class="form-select" id="categoria">
                {{#if categorias}}
                    <option value="0"></option>
                {{/if}}
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

            <button type="submit" class="align-self-end btn btn-primary mt-4">Criar postagem</button>
        </form>
    </div>
</div>
